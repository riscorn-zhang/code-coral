root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python 文件
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
